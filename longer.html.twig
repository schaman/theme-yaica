{% extends 'layout.html.twig' %}
{% block title %}{{ page.title }}{% endblock %}
{% block content %}
<div class="container">
  <div class="row">
    <nav class="bs-docs-sidebar col-xs-3">
      <!--Nav Bar -->
      <ul id="sidebar" class="nav nav-stacked fixed">
        {% for section in sections %}
          {% if section.anchor %}
            <li>
              <a href="#{{ section.anchor }}">{{ section.title }}</a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </nav>
  </div>
</div>

{% for section in sections %}
  <section class="text
    {%- if loop.index is odd %}-b{%- endif %}"
    {%- if section.anchor %} id="{{ section.anchor }}" {%- endif %}>
    <div class="container">
      <div class="row">
        <div class="col-xs-8 col-xs-offset-4">
          <h1>{{ section.title }}</h1>
          {% if section.class == 'video' %}
            <div class="flex-video widescreen">
              <iframe allowfullscreen="" frameborder="0" src="http://www.youtube.com/embed/{{ section.video.id }}?rel=0"></iframe>
            </div>
          {% else %}
            <div class="text-body">
              {{ section.text | markdown }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endfor %}
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
$(function() {
  $('body').scrollspy({
    target: '.bs-docs-sidebar',
    offset: 40
  });

  $("#sidebar").affix({
    offset: {
      top: 200 /* header height */
    }
  });
})
</script>
{% endblock %}
{% block stylesheets %}
<style type="text/css">
#sidebar.affix {
  top: 60px;
}

.bs-docs-sidebar {
  position: absolute;
}

/* sidebar */
.bs-docs-sidebar {
  padding-left: 20px;
  margin-top: 60px;
  margin-bottom: 20px;
}

/* all links */
.bs-docs-sidebar .nav>li>a {
  color: #999;
  font-size: 18px;
  font-weight: 400;
  padding: 4px 20px;
}

/* nested links */
.bs-docs-sidebar .nav .nav>li>a {
  padding-top: 1px;
  padding-bottom: 1px;
  padding-left: 30px;
  font-size: 16px;
}

/* all links */
.bs-docs-sidebar .nav>li>a {
  /*add trasnparent border */
  border-left: 2px solid transparent;
}
/* active & hover links */
.bs-docs-sidebar .nav>.active>a, 
.bs-docs-sidebar .nav>li>a:hover, 
.bs-docs-sidebar .nav>li>a:focus {
  color: #563d7c;         
  text-decoration: none;      
  background-color: transparent;  
  border-left: 2px solid #563d7c; 
}

/* all active links */
.bs-docs-sidebar .nav>.active>a, 
.bs-docs-sidebar .nav>.active:hover>a,
.bs-docs-sidebar .nav>.active:focus>a {
  font-weight: 700;
}
/* nested active links */
.bs-docs-sidebar .nav .nav>.active>a, 
.bs-docs-sidebar .nav .nav>.active:hover>a,
.bs-docs-sidebar .nav .nav>.active:focus>a {
  font-weight: 500;
}

/* hide all (inactive) nested list */
.bs-docs-sidebar .nav ul.nav {
  display: none;       
}
/* show active nested list */
.bs-docs-sidebar .nav>.active>ul.nav {
  display: block;       
}

@media screen and (max-width: 500px){
  .bs-docs-sidebar {
    display:none
  }
}

.bs-docs-sidebar > ul {
    overflow-y: auto;
    height: 100%;
}


.text-b {
  background-color: #f8f8f8;
  border-top: 1px solid #e7e7e7;
  border-bottom: 1px solid #e7e7e7;
}
.text h1, .text-b h1 {
  margin-bottom: 50px;
  margin-top: 0;
}
.text-body p {
  margin: 0;
}
.text-body p + p {
  margin-top: 30px;
}
.text-body h1 {
  font-size: 35px;
  margin: 45px 0 35px;
}
.text-body h2 {
  font-size: 20px;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 500;
  margin: 35px 0 25px;
  text-transform: none;
}
.text-body .img {
  height: 242px;
  width: 538px;
  margin: 70px 0;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  overflow: hidden;
  display: inline-block;
}
.text-body .img > img {
  display: block;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
}
.text-body blockquote {
  position: relative;
  margin: 60px 0 55px 40px;
}
.text-body blockquote:before {
  content: url({{ 'img/icons/quote-up-mb.png' | asset_url }});
  position: absolute;
  top: 0px;
  left: -40px;
}
.text-body blockquote p, .text-body blockquote li {
  font-size: 18px;
}
</style>
{{ parent() }}
{% endblock %}